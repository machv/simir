{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storage01Type": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "dcName": {
      "type": "string",
      "minLength": 1
    },
    "dcPrivateIp": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "10.0.0.10"
    },
    "domainName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The FQDN of the AD Domain to be joined"
      },
      "defaultValue": "group15.litware.com"
    },
    "dcAdminUserName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The name of the Administrator with rights to join the domain"
      },
      "defaultValue": "LabAdmin"
    },
    "dcAdminPassword": {
      "type": "securestring"
    },
    "dcWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2016-Datacenter"
      ]
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "storagesimir"
    },
    "storageAccountResourceGroup": {
      "type": "string",
      "defaultValue": "SIMIR"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "adVNET"
    },
    "virtualNetworkResourceGroup": {
      "type": "string",
      "defaultValue": "SIMIR"
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Location of resources that the script is dependent on such as linked templates and DSC modules"
      },
      "defaultValue": "https://raw.githubusercontent.com/machv/simir/master/arm-data/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    }
  },
  "variables": {
    "storage01Name": "[concat('storage01', uniqueString(resourceGroup().id))]",
    "dcImagePublisher": "MicrosoftWindowsServer",
    "dcImageOffer": "WindowsServer",
    "dcOSDiskName": "[concat(parameters('dcName'), 'dcOSDisk')]",
    "dcVmSize": "Standard_D2_v2",
    "dcVnetID": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "dcSubnetRef": "[concat(variables('dcVnetID'), '/subnets/', 'adSubnet')]",
    "dcStorageAccountContainerName": "vhds",
    "dcNicName": "[concat(parameters('dcName'), 'NetworkInterface')]"
  },
  "resources": [
    {
      "name": "[variables('dcNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "westeurope",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "dcNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('dcPrivateIp')]",
              "subnet": {
                "id": "[variables('dcSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('dcName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "westeurope",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('dcNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('dcVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('dcName')]",
          "adminUsername": "[parameters('dcAdminUsername')]",
          "adminPassword": "[parameters('dcAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('dcImagePublisher')]",
            "offer": "[variables('dcImageOffer')]",
            "sku": "[parameters('dcWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "dcOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId(parameters('storageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2016-01-01').primaryEndpoints.blob, variables('dcStorageAccountContainerName'), '/', variables('dcOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('dcNicName'))]"
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('dcName'),'/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('dcName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainName')]",
          "User": "[concat(parameters('dcAdminUserName'), '@', parameters('domainName'))]",
          "Restart": "true"
        },
        "protectedSettings": {
          "Password": "[parameters('dcAdminPassword')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('dcName'),'/Microsoft.Powershell.DSC')]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "[concat(parameters('dcName'),'/Microsoft.Powershell.DSC')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/',parameters('dcName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.76",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[concat(parameters('_artifactsLocation'),'/dsc/dc.zip')]",
          "sasToken": "[parameters('_artifactsLocationSasToken')]",
          "configurationFunction": "dc.ps1\\ConfigureServer",
          "Properties": {
            "DCName": "[parameters('dcName')]",
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('dcAdminUserName')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            }
          },
          "protectedSettings": {
            "Items": {
              "AdminPassword": "[parameters('dcAdminPassword')]"
            }
          }
        },
        "protectedSettings": {}
      }
    }
  ],
  "outputs": {
  }
}
